#!/usr/bin/env node

const program = require('commander')
const pkg = require('../package.json')

program.version(pkg.version)

program.command('api', 'Run agent API')

program.command('worker', 'Run agent worker')

program.command('wallet', 'Communicate with asset wallets')

program.command('manage', 'Manage assets & markets')

program
  .command('run <script>')
  .description('Run scripts')
  .action(async (script) => {
    console.log(`Running src/scripts/${script}`)
    require(`../src/scripts/${script}`)
  })

program.parse(process.argv)
